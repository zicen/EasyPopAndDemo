<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zyyoona7.easypopup.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">


        <Button
            android:id="@+id/btn_basic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="basic" />

        <Button
            android:id="@+id/btn_easy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Easy" />

        <Button
            android:id="@+id/btn_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RecyclerView" />

        <Button
            android:id="@+id/btn_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Movie" />

        <Button
            android:id="@+id/btn_webp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Webp" />

        <Button
            android:id="@+id/surface"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SurfaceView" />

        <Button
            android:id="@+id/emoji"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Emoji" />

        <Button
            android:id="@+id/keyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keyboard" />

        <Button
            android:id="@+id/svg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SVG" />

        <Button
            android:id="@+id/resize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试 resize 收益" />

        <Button
            android:id="@+id/toast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试 Toast" />

        <Button
            android:id="@+id/glide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试 Glide" />

        <Button
            android:id="@+id/gift_pannel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试 礼物面板" />
        <Button
            android:id="@+id/test_recycler"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试 RecyclerView" />
        <Button
            android:id="@+id/test_thread_update_ui"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试 子线程更新 UI" />
    </LinearLayout>
</ScrollView>
